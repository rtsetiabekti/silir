<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_lastview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightBlue"
    android:gravity="center">

    <ImageView
        android:id="@+id/second_appear"
        android:layout_centerInParent="true"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/silir_text" />


    <TextView
        android:id="@+id/third_appear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/second_appear"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="&quot;never been this easy&quot;"
        android:textColor="@color/defaultLight"
        android:textStyle="italic" />

</RelativeLayout>
